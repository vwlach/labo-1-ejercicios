#include <stdio.h>
#include <stdlib.h>

char muestroMenu()
{
	setbuf(stdout, NULL);

		char opcion;

		printf("MENU\na)iniciar\nb)procesar\nc)finalizar\nd)salir\nIngrese una opcion: ");
		fflush(stdin);
		scanf("%c",&opcion );

		return opcion;

}
